{
	"name": "Flamekit",
	"displayName": "Flamekit",
	"description": "Phoenix Framework Utilities",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:runexecFlamekit.createCSS",
		"workspaceContains:**/*.html.eex",
		"workspaceContains:**/*.html.leex"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "runexecFlamekit.createCSS",
				"title": "Phoenix CSS Create"
			},
			{
				"command": "runexecFlamekit.createFragment",
				"title": "Phoenix Fragment Create"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"jasmine": "^3.7.0",
		"mocha": "^8.2.1",
		"tape": "^5.2.2",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
